<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-10dp"
        android:left="-10dp"
        android:right="-10dp"
        android:top="-10dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="13dp"
                android:color="@color/dark_gray" />
            <corners android:radius="@dimen/scan_overlay_radius" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/scan_overlay_radius" />
            <stroke
                android:width="@dimen/scan_overlay_stroke_width"
                android:color="?colorPrimary" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?colorPrimaryContainer</item>
        <item name="titleTextColor">?colorOnPrimaryContainer</item>
        <item name="titleCentered">true</item>
        <item name="subtitleCentered">true</item>
        <item name="subtitleTextColor">?colorOnPrimaryContainer</item>
    </style>

    <style name="Toolbar.Barcode">
        <item name="navigationIcon">@drawable/ic_go_back</item>
        <item name="menu">@menu/menu_share</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button" />

    <style name="Button.Icon" parent="Widget.Material3.Button.Icon">
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Button.Icon.Barcode">

    </style>

    <style name="Button.Outlined" parent="Widget.Material3.Button.OutlinedButton" />

    <style name="Button.Outlined.Icon" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="iconGravity">textStart</item>
    </style>

    <style name="CardView.Outlined" parent="Widget.Material3.CardView.Outlined" />

    <style name="CardView.AppInfo" parent="CardView.Outlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/screen_margin</item>
        <item name="android:layout_marginEnd">@dimen/screen_margin</item>
        <item name="android:layout_marginTop">@dimen/views_margin_small</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="TextView.AppInfo" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/views_margin_small</item>
        <item name="android:drawableTint">?colorOnSurface</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelMedium</item>
    </style>

    <style name="RecyclerView.Barcode" parent="">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:layout_marginTop">@dimen/views_margin</item>
        <item name="android:paddingBottom">@dimen/recycler_bottom_padding</item>
        <item name="android:overScrollMode">never</item>
        <item name="itemSpacing">@dimen/recycler_linear_item_spacing</item>
    </style>

    <style name="ScrollView.Barcode" parent="">
        <item name="android:scrollbars">none</item>
    </style>

    <style name="ConstraintLayout.Barcode" parent="">
        <item name="android:paddingBottom">@dimen/screen_margin_big</item>
    </style>

    <style name="ImageView.Barcode" parent="">
        <item name="android:layout_width">@dimen/barcode_image_size</item>
        <item name="android:layout_height">@dimen/barcode_image_size</item>
        <item name="android:layout_marginTop">@dimen/barcode_toolbar_margin</item>
    </style>

    <style name="TextView.Barcode.Title" parent="@style/TextAppearance.Material3.TitleLarge">
        <item name="android:layout_marginStart">@dimen/screen_margin</item>
        <item name="android:layout_marginEnd">@dimen/screen_margin</item>
        <item name="android:layout_marginTop">@dimen/views_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
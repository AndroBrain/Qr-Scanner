<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_go_back"
            app:subtitle="12 Jul 2022"
            app:title="@string/screen_driver_license" />

        <ImageView
            android:id="@+id/image_barcode"
            android:layout_width="@dimen/barcode_image_size"
            android:layout_height="@dimen/barcode_image_size"
            android:layout_marginTop="@dimen/barcode_toolbar_margin"
            android:src="@drawable/ic_driver_license"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_margin"
            android:layout_marginTop="@dimen/views_margin"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textIsSelectable="true"
            app:layout_constraintTop_toBottomOf="@id/image_barcode"
            tools:text="@string/screen_driver_license" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_copy"
            style="@style/Button.Icon.Barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_margin"
            android:layout_marginTop="@dimen/views_margin"
            android:text="@string/copy"
            app:icon="@drawable/ic_copy_text"
            app:layout_constraintTop_toBottomOf="@id/text_title" />

        <com.airbnb.epoxy.EpoxyRecyclerView
            android:id="@+id/recycler"
            style="@style/RecyclerView.Barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/button_copy" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
